<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.project.saadadeel.CompetiFit">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION"/>

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Tutorial"
            android:label="@string/title_activity_tutorial"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SignUp"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UserMain"
            android:label="@string/title_activity_user_main"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".search"
            android:label="@string/title_activity_user_main"
            android:theme="@style/AppTheme"
            android:parentActivityName="com.project.saadadeel.CompetiFit.UserMain" />
        <activity
            android:name=".RunTracker.Pop"
            android:theme="@style/AppTheme.custom"
            android:parentActivityName="com.project.saadadeel.CompetiFit.UserMain"
            />
        <activity
            android:name=".RunTracker.Running"
            android:label="@string/title_activity_running"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".profile"
            android:label="@string/title_activity_running"
            android:theme="@style/AppTheme"
            android:parentActivityName="com.project.saadadeel.CompetiFit.UserMain"
            ></activity>

        <service android:enabled="true" android:name="com.project.saadadeel.CompetiFit.RunTracker.ActivityRecognitionService" />

    </application>

</manifest>