<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.project.saadadeel.CompetiFit.LeagueTable">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Profile">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:title="Hello"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextColor="@color/colorForeground"
        app:title="CompetiFit">

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profileCard"
        android:background="@color/colorForeground"
        android:layout_below="@+id/toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">



            <TextView
                android:id="@+id/profile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:text="Profile"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="1dp"
                android:gravity="center"

                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="@color/greyLight"
                android:layout_centerHorizontal="true"
                android:text="Username:"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:layout_below="@+id/profile_title"/>

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Name"
                android:layout_below="@+id/profile_username"
                android:layout_marginLeft="1dp"
                android:gravity="center"

                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="@color/greyLight"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/profile_runs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="profile_runs"
                android:layout_below="@id/profile_name"
                android:layout_marginLeft="1dp"
                android:gravity="center"


                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="@color/greyLight"
                android:layout_centerHorizontal="true"/>


            <TextView
                android:id="@+id/profile_races"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_below="@+id/profile_runs"
                android:text="profile_races"
                android:layout_marginLeft="1dp"
                android:gravity="center"


                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="@color/greyLight"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <!--THE PASSWORD TABLE !-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordChaneCard"
        android:background="@color/colorForeground"
        android:layout_below="@+id/profileCard"
        android:layout_marginTop="30dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/profile_password_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:text="Change Password"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="1dp"
                android:gravity="center"

                android:layout_alignParentTop="true"/>

            <EditText
                android:id="@+id/profile_password_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:hint="Current Password"
                android:layout_marginLeft="1dp"
                android:gravity="center"

                android:textColorHint="@color/greyLight"
                android:layout_below="@+id/profile_password_title"/>

            <EditText
                android:id="@+id/profile_password_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:hint="New Password"
                android:layout_marginLeft="1dp"
                android:gravity="center"

                android:textColorHint="@color/greyLight"
                android:layout_below="@+id/profile_password_current"/>

            <EditText
                android:id="@+id/profile_password_new_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:hint="Please repeat new password"
                android:layout_marginLeft="1dp"
                android:gravity="center"

                android:textColorHint="@color/greyLight"
                android:layout_below="@+id/profile_password_new"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:id="@+id/change_password"
                android:background="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textColorHint="@color/colorForeground"
                android:padding="3sp"
                android:textColor="@color/colorForeground"
                android:layout_below="@+id/profile_password_new_repeat"
                />

        </RelativeLayout>
   </android.support.v7.widget.CardView>

</RelativeLayout>
    </ScrollView>