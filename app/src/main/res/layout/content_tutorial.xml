<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.project.saadadeel.CompetiFit.Tutorial"
    tools:showIn="@layout/activity_tutorial">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tutorialTitle"
        android:text="CompetiFit"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_margin="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tutorialText"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/tutorialText"
        android:layout_below="@id/tutorialTitle"
        android:textColor="#1e1e1e" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go To Main"
        android:onClick="goToMain"
        android:background="@color/colorPrimary"
        android:padding="10sp"
        android:layout_below="@id/tutorialText"
        android:layout_margin="10sp"/>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
